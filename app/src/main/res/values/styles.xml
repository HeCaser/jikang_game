<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottom_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="select_rb_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="select_rb_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="one_sharp_eye_style1">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/icon_red</item>
    </style>

    <style name="one_sharp_eye_style2">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/icon_red</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="search_word_style1">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/word_selector</item>
        <item name="android:textColor">@color/word_select_corlor</item>
    </style>

    <style name="search_number_style1">
<!--        <item name="android:minWidth">120dp</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/word_selector</item>
        <item name="android:textColor">@color/word_select_corlor</item>
    </style>

    <style name="before_search_1">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/star_gray</item>
    </style>

    <style name="before_search_style2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:drawableLeft">@drawable/blue_right</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/bg_gray</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="ebook_tree_set">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/circle_border_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ebook_sub_field_one">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:text">10</item>
    </style>

    <style name="ebook_subfield_style1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="vertival_style1">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_31c2ff</item>
    </style>

    <style name="show_multi_number_style1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/multi_number_bg_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/multi_tv_corlor</item>
    </style>

    <style name="MySwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--track是switch轨迹部分,这里我们用了一个selector来解决不同状态下轨迹的颜色-->
        <item name="android:track">@drawable/switch_track</item>
        <!--thumb是switch滑块,这里我们用了Widget.AppCompat.CompoundButton.Switch下带的资源,如果有需要,请自行更换图标-->
        <item name="android:thumb">@drawable/abc_switch_thumb_material</item>
        <item name="android:background">@null</item>
        <!--switch上的文字,插入占位符,解决部分手机不能显示问题-->
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <!--这个东西才能控制整个开关的宽度, 有些人会发现设置width会无效,设置一下这个就好啦-->
        <item name="android:switchMinWidth">50dp</item>
    </style>

    <style name="TKCommonBottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_center</item>
        <item name="android:windowExitAnimation">@anim/fade_out_center</item>
    </style>
</resources>
