<?xml version="1.0" encoding="utf-8"?>
<com.example.game.widget.WaterMarkView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">

        <LinearLayout
                android:id="@+id/llOne"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="10dp"
                    android:text="字母"
                    android:textSize="20sp" />

            <Switch
                    android:id="@+id/switchZiMu"
                    style="@style/MySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="尺寸"
                    android:textSize="20sp" />

            <RadioGroup
                    android:id="@+id/rgChiCun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                        android:id="@+id/rb1"
                        style="@style/select_rb_style2"
                        android:checked="true"
                        android:text="5*5     " />

                <RadioButton
                        android:id="@+id/rb2"
                        style="@style/select_rb_style2"
                        android:text="6*6    " />

                <RadioButton
                        android:id="@+id/rb3"

                        style="@style/select_rb_style2"
                        android:text="7*7  " />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/llTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/llOne">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_margin"
                    android:text="下一个值: "
                    android:textSize="20dp" />

            <TextView
                    android:id="@+id/tvNextValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="计时器: "
                    android:textSize="20dp" />

            <TextView
                    android:id="@+id/tvTimeRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/rvNumbers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llTwo" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.example.game.widget.WaterMarkView>