<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clParent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        tools:context=".activity.MainActivity">

    <com.example.game.widget.SquareItem
            android:id="@+id/squareParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/ivBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/taikang_icon" />

        <TextView
                android:id="@+id/tvBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blue_solid_corner_4dp"
                android:gravity="center"
                android:text="" />

        <TextView
                android:id="@+id/tvBgError"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_solid_corner_4dp"
                android:gravity="center"
                android:text=""
                android:visibility="invisible" />
    </com.example.game.widget.SquareItem>


</androidx.constraintlayout.widget.ConstraintLayout>